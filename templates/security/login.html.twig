{% extends 'base.html.twig' %}

{% block title %}Se connecter - DataProjekt{% endblock %}
{% block MonTitre %}Connexion{% endblock %}
{% block content %}
<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-primary">Merci de vous connecter</h1>
    <label for="inputEmail"><strong>Votre email</strong></label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder= "Veuillez saisir votre email" required autofocus>
    <label for="inputPassword" class= "mt-1"><strong>Mot de passe</strong></label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder= "Veuillez saisir votre mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary btn-sm mt-2" type="submit">
        Me connecter
    </button>
</form>
</div>
{% endblock %}
